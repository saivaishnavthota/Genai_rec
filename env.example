# ==============================================
# GenAI Hiring System Environment Configuration
# Copy this file to .env and update the values
# ==============================================

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ENVIRONMENT=development
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
DEBUG=true
FRONTEND_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=vaishnav
POSTGRES_DB=genai_hiring
POSTGRES_PORT=5432
# For Docker usage, use: postgresql://postgres:vaishnav@postgres:5432/genai_hiring
# For local usage (outside Docker), use: postgresql://postgres:vaishnav@localhost:5432/genai_hiring
DATABASE_URL=postgresql://postgres:vaishnav@localhost:5432/genai_hiring

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# For Docker usage, use: redis
# For local usage (outside Docker), use: localhost
REDIS_HOST=localhost
REDIS_PORT=6379
# For Docker usage, use: redis://redis:6379
# For local usage (outside Docker), use: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ==============================================
# API CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
BACKEND_PORT=8000
API_BASE_URL=http://localhost:8000

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_HOST=localhost
REACT_APP_PORT=3000

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# EMAIL CONFIGURATION (Required for notifications)
# ==============================================
SMTP_SERVER=smtp.gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=your-email@gmail.com

# ==============================================
# LLM CONFIGURATION
# ==============================================
# Ollama Configuration (for local LLM)
# IMPORTANT: Ollama runs locally, NOT in Docker
# 1. Install Ollama from https://ollama.ai/download
# 2. Start Ollama: ollama serve (or it runs automatically on Windows)
# 3. Pull model: ollama pull qwen2.5:3b-instruct
OLLAMA_PORT=11434
OLLAMA_HOST=localhost
OLLAMA_MODEL=qwen2.5:3b-instruct

# Legacy Phi-3 Configuration
PHI3_MODEL_ID=microsoft/phi-3-mini-4k-instruct

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx

# ==============================================
# SCORING CONFIGURATION
# ==============================================
MATCH_SCORE_WEIGHT=0.5
ATS_SCORE_WEIGHT=0.5
SHORTLIST_THRESHOLD=70
REQUALIFY_THRESHOLD=60

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/genai-hiring.log

# ==============================================
# GOOGLE CALENDAR/MEET API (Optional)
# ==============================================
# To enable Google Calendar/Meet integration, choose one method:

# Method 1: OAuth (Recommended for development)
USE_SERVICE_ACCOUNT=false
TOKEN_FILE=token.json
# 1. Go to Google Cloud Console
# 2. Enable Google Calendar API
# 3. Create OAuth 2.0 credentials
# 4. Download credentials.json to backend directory
# 5. Run the application - it will prompt for OAuth consent on first run

# Method 2: Service Account (Recommended for production)
# USE_SERVICE_ACCOUNT=true
# SERVICE_ACCOUNT_FILE=service_account.json
# IMPERSONATE_USER=your-email@yourdomain.com

# Meeting Configuration
MEET_TIMEZONE=Asia/Kolkata
MEET_CALENDAR_ID=primary

# ==============================================
# AI INTERVIEW MODULE CONFIGURATION
# ==============================================
# MinIO/S3 Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
S3_BUCKET=interview-blobs
S3_USE_SSL=false
S3_REGION=us-east-1

# Ollama Configuration (for RAG scoring)
OLLAMA_API_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:3b-instruct

# Feature Flags
ENABLE_DIARIZATION=false
ENABLE_OCR=false

# Policy & Rubric Versions
POLICY_VERSION=1.0
RUBRIC_VERSION=1.0

# Proctoring Configuration
PROCTOR_FPS=2
CLIP_DURATION_MIN=6.0
CLIP_DURATION_MAX=10.0

# ASR Configuration (Whisper)
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# RAG Configuration
RAG_TOP_K=5
RAG_RERANK_TOP_N=3
RAG_HYBRID_ALPHA=0.5